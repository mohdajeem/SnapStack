# Root .env.example for SnapStack (do NOT store secrets here)

# Backend (Server/.env)
MONGO_URI="your-mongodb-connection-string"
JWT_SECRET="your_jwt_secret"
JWT_EXPIRE="30d"
GEMINI_API_URL="https://example-gemini-endpoint.com"
GEMINI_API_KEY="your_gemini_api_key"
PORT=5000
NODE_ENV=development

# Frontend (client/.env or environment variables used by Vite)
# In development `client/src/services/api.js` uses a proxied `/api/v1`.
VITE_API_URL="https://your-api.example.com"
